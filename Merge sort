#include <stdio.h>
#include <stdlib.h>
void Merge(int arr[], int f, int m, int l)
{
    int i, j, k;
    int a = m - f + 1;
    int b = l - m;
    int F[a], L[b];
    for (i = 0; i < a; i++)
        F[i] = arr[f + i];
    for (j = 0; j < b; j++)
        L[j] = arr[m + 1 + j];
    i = 0;
    j = 0;
    k = f;
    while (i < a && j < b)
    {
        if (F[i] <= L[j])
        {
            arr[k] = F[i];
            i++;
        }
        else
        {
            arr[k] = L[j];
            j++;
        }
        k++;
    }
    while (i < a)
    {
        arr[k] = F[i];
        i++;
        k++;
    }
    while (j < b)
    {
        arr[k] = L[j];
        j++;
        k++;
    }
}
void Merge_Sort(int arr[], int f, int l)
{
    if (f < l)
    {

        int m = f + (l - f) / 2;
        Merge_Sort(arr, f, m);
        Merge_Sort(arr, m + 1, l);

        Merge(arr, f, m, l);
    }
}
int main()
{
    int n,i,j;
    printf("Enter the size: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter the elements of array: ");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    Merge_Sort(arr, 0, n - 1);

    printf("The sorted array is: ");
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}
